<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="greeterHindi" class="com.irahul.hellospring.impl.HindiGreeter"/>
	<bean id="greeterEnglish" class="com.irahul.hellospring.impl.EnglishGreeter"/>

	<bean id="helloWorld" class="com.irahul.hellospring.HelloWorldSpring">
		<property name="greeter" ref="greeterHindi" />
	</bean>
	
	<bean id="helloWorldEnglish" class="com.irahul.hellospring.HelloWorldSpring">
		<property name="greeter" ref="greeterEnglish" />
	</bean>
</beans>